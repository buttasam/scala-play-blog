# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET         /                             controllers.HomeController.index
GET         /login                        controllers.LoginController.login

POST        /login                        controllers.LoginController.loginFormPost
GET         /logout                       controllers.LoginController.logout

# Admin routes
GET         /admin                        controllers.AdminController.index
GET         /admin/blog                   controllers.AdminController.blog(articleId: Option[Int])
GET         /admin/blog/delete/:id        controllers.AdminController.deleteArticle(id: Int)
GET         /admin/contact                controllers.AdminController.contact
POST        /admin/blog                   controllers.AdminController.articleFormPost

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                 controllers.Assets.versioned(path="/public", file: Asset)
